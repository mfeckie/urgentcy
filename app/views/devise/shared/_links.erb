<div>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <span><%= link_to "Sign up", new_registration_path(resource_name) %><br/></span>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <span><%= link_to "Forgot your password?", new_password_path(resource_name) %><br/></span>
  <% end -%>
</div>